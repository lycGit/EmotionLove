/* pages/home/home.wxss */
.container {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.scroller {
    display: flex;
    overflow-x: scroll;
    margin-bottom: 20rpx;
}

.scroller .scroll_item{
    display: flex;
    justify-content: center;
}

.scroller .photo {
    width: 700rpx;
    height: 350rpx;
}

.scroller .scroll_item:last-of-type{
    /* padding: 是内部间距 */
    padding-right: 30rpx;
}

.container .notice{
    display: flex;
    background-color: #f7f2d7;
    height: 64rpx;
    font-size: 30rpx;
    color: #e1ae63;
    justify-content: start;
    align-items: center;
    border-radius: 10rpx;
}
.container .notice_logo{
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
    margin-left: 20rpx;
 }
.container .search {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 20rpx;
}

.container .search-wrapper{
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-radius: 40rpx;
  border: #f0f0f0 solid 2rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx #f0f0f0;
  margin-left: 4rpx;
  margin-right: 4rpx;
  height: 80rpx;
}

.container .search_word{
    display: flex;
    font-size: 30rpx;
    align-items: center;
    color: #9a9a9a;
}

.container .search_btn{
    display: flex;
    background-color: #488ef2;
    font-size: 32rpx;
    color: white;
    border-radius: 32rpx;
    width: 150rpx;
    height: 64rpx;
    justify-content: center;
    margin-right: 20rpx;
    padding-top: 20rpx;
}

.container .search-logo{
   width: 40rpx;
   height: 40rpx;
   margin-left: 15rpx;
   margin-right: 10rpx;
  }

  .search .search_hint{
      display: flex;
      justify-content: space-between;
      margin-top: 10rpx;
      margin-bottom: 10rpx;
      height: 60rpx;
      align-items: center;
  }
  .search .left_hint{
    font-size: 30rpx;
    color: #4c8dde;
    justify-content: center;
  }
  .search .right_hint{
    font-size: 30rpx;
    color: #4c8dde;
  }

  .container .emotion_source {
    display: flex;
    height: 160rpx;
    justify-content: space-between;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    
  }
  .container .source_item {
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.8);
    align-items: center;
    justify-content: center;
  }
  .container .source_logo {
     width: 110rpx;
     height: 110rpx;
  }
  .container .source_gray_bar{
    background-color: #f7f7f7;
    height: 30rpx;
    margin-left: -30rpx;
    margin-right: -30rpx;
  }

  .change_bar{
      display: flex;
      justify-content: space-between;
      font-size: 34rpx;
      font-weight: bold;
      margin-top: 20rpx;
      margin-bottom: 20rpx;
      height: 80rpx;
      align-items: center;
  }
  .change_btn {
      display: flex;
      justify-content: center;
      border: 2rpx solid #e9e9e9;
      font-weight: normal;
      font-size: 32rpx;
      border-radius: 8rpx;
      width: 150rpx;
      height: 60rpx;
      align-items: center;
  }

  .search_always {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;

  }

  .search_always .search_item{
      display: flex;
      height: 54rpx;
      font-size: 28rpx;
      background-color: rgba(114, 149, 225, 0.1);
      border: solid 2rpx #93b8e7;
      border-radius: 20rpx;
      padding-right: 25rpx;
      margin-bottom: 20rpx;
      justify-content: center;
      align-items: center;
  }
  .search_always .search_item_hide{
    display: flex;
    width: 200rpx;
}

  .search_always .search_item_logo {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
    margin-left: 20rpx;  
  }

  .top_topic {
      display: flex;
      flex-direction: row;
      height: 374rpx;
      justify-content: space-between;
      margin-top: 20rpx;
      margin-bottom: 20rpx;
  }
  .top_topic .left{
      display: flex;
      /* background-color: yellow; */
      /* width: 360rpx; */
      margin-right: 10rpx;
      justify-content: center;
      align-items: center;
  }
  .top_topic .right{
     display: flex;
     /* width: 360rpx; */
     flex-direction: column;
     align-items: center;
     margin-left: 10rpx;
     justify-content: space-between;
  }

  .top_topic .left_search_item_logo{
      width: 340rpx;
      height: 374rpx;
      background-color: #e1ae63;
      border-radius: 20rpx;
  }

  .top_topic .right_search_item_logo{
      width: 340rpx;
      height: 180rpx;
      background-color: #4c8dde;
      border-radius: 20rpx;
  }

  .container .topics{
    display: flex;
    flex-direction: column;
}

.container .topic_bar{
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center;
    width: 100%;
    height: 84rpx;
    font-size: 34rpx;

}

.topic_bar .topic_logo {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.all_topics .topic_items{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.topic_items .topic_item{
    display: flex;
    background: -webkit-linear-gradient(left,rgb(240,215,218),rgb(228, 173, 172));
    width: 200rpx;
    height: 64rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    justify-content: center;
    align-items: center;
    border-radius: 27rpx;
}

.topic_items .topic_item_hide{
    width: 200rpx;
    height: 54rpx;
    margin-bottom: 20rpx;
 
}

  .all_cases {
      display: flex;
      flex-direction: column;
  }

  .case_bar {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 34rpx;
    justify-content: space-between;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    height: 84rpx;
  }
  .case_bar .left{
      display: flex;
  }
  .case_bar .right{
    display: flex;
    margin-right: 20rpx;
}
  .case_bar .case_logo {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}
  .all_cases .case_row {
      display: flex;
      flex-direction: column;
  }
  






