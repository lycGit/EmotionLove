
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: space-between; */
    width: 100%;
    height: 100vh;
    background-color: rgb(247, 229, 241);
}
.container .notice {
  width: 92%;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #f7f2d7;
  color: #e1ae63;
  box-shadow: 0 3rpx 6rpx 1rpx rgba(0,97,6,0.4100);
  border-radius: 30rpx;
  position: absolute;
  top: 15rpx;
  left: 30rpx;
  display: flex;
}

.container .notice image {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx 18rpx;
}

.container .notice .notice_desc {
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
}
