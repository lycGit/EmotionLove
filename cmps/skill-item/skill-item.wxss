.row .title{
    font-size: 28rpx;
}

.row .images{
    display: flex;
    justify-content: space-around;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.row .images .image_wrapper_hide{
    width: 200rpx;
    height: 100rpx;
}
.row .skill_image{
    border-radius: 20rpx;
    width: 200rpx;
    height: 100rpx;
    background-color: yellow;
}
.row .bottom{
    display: flex;
    justify-content: start;
    align-items: center;
    font-size: 20rpx;
    color: gray;
    margin-top: 40rpx;
}
.row .date{
    display: flex;
    margin-right: 15rpx;
    align-items: center;
}
.row .like{
    display: flex;  
    align-items: center;
}
.row .bottom_logo{
    width: 20rpx;
    height: 20rpx;
    margin-right: 5rpx;
}
.row .underline{
    display: flex;
    height: 2rpx;
    background-color: #e9e9e9;
    margin-top: 20rpx;
}